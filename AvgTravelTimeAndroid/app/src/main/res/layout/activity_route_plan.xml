<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.cqu.graduation.pyf.graduationprojectavgtraveltime.view.RoutePlanActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearlayout">

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="起点"
                android:layout_marginLeft="40dp"
                android:id="@+id/startPosition"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:hint="关键字搜索"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="终点"
                android:id="@+id/endPosition"
                android:layout_marginLeft="40dp"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:hint="关键字搜索"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />
        </LinearLayout>

        <TimePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:id="@+id/timepicker"
            android:layout_below="@id/linearlayout"
            android:layout_toRightOf="@id/datepicker"
            android:visibility="gone">

        </TimePicker>

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:id="@+id/datepicker"
            android:layout_below="@id/linearlayout"
            android:visibility="gone">
        </DatePicker>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearlayout2"
            android:layout_below="@id/linearlayout">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="日期选择"
                android:id="@+id/date"
                android:gravity="center_vertical"
                android:layout_marginLeft="40dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="时间选择"
                android:id="@+id/time"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="查询"
                android:id="@+id/search_button" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@id/linearlayout2"/>

        <ListView
            android:id="@+id/bus_result_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#00000000"
            android:divider="@null"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:listSelector="#00000000"
            android:layout_below="@id/linearlayout2"
            android:layout_marginTop="5dp">
        </ListView>

    </RelativeLayout>

</layout>
